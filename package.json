{
  "name": "pointless-lang.github.io",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "build": "node build-scripts/build.js",
    "build-watch": "node --watch-path=. build-scripts/build.js",
    "fmt": "deno fmt --ignore=dist",
    "lint": "deno lint; stylelint static/css/*",
    "serve": "serve --config serve.json"
  },
  "stylelint": {
    "extends": "stylelint-config-standard",
    "rules": {
      "font-family-name-quotes": null,
      "no-descending-specificity": null
    }
  },
  "dependencies": {
    "gray-matter": "^4.0.3",
    "marked": ">=15",
    "pointless": "github:pointless-lang/pointless#main",
    "prettier": "^3.6.2",
    "serve": "^14.2.4",
    "string-argv": "^0.3.2",
    "stylelint": "^16.23.0",
    "stylelint-config-standard": "^39.0.0"
  }
}
